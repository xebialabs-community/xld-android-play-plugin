<rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.xebialabs.com/xl-deploy/xl-rules" >

    <rule name="play.InstallApkToTrack" scope="deployed">
        <conditions>
            <type>play.ApkDeployed</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <jython>
                <description expression="true">"Deploy application %s to %s" % (deployed.applicationName, deployed.container.name)</description>
                <script>androidplay/upload_apk.py</script>
            </jython>
        </steps>
    </rule>

</rules>
